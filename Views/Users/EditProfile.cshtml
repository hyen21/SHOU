@model SHOU.Models.EditModel.ProfileEditModel

@{
    ViewData["Title"] = "ProfileEditModel";
    bool isDisable = true;
    var a = ViewData["isDisable"];
    if (ViewData["isDisable"] != null)
    {
        isDisable = (bool)ViewData["isDisable"];
    }
    var name = @User.FindFirst("Name")?.Value;
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<div class="avatar">
    <div class="background">
        <img src="/Img/tet.jpg" alt="" width="100%" />
    </div>
    <div class="upload">
        <img src="/Img/noprofil.jpg" width="200" height="200" alt="" />
        <div class="round">
            <input type="file" />
            <i class="fa fa-camera" style="color: #fff;"></i>
        </div>
        <div class="name">
            @name
        </div>
    </div>
</div>

<div class="edit-profile">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="EditProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="isDisable" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" disabled="isDisable" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" disabled="isDisable" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" type="date" disabled="isDisable" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" disabled="isDisable" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" disabled="true" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br/>
            @if (isDisable)
            {
                <div class="button-submit-edit-proflie">
                    <button class="button-submit-blue" style="width:100px;" onclick="enableEditing()">Chỉnh sửa</button>
                </div>
            }
            else
            {
                <div class="button-submit-edit-proflie">
                    <button type="submit" class="button-submit-green" style="width:70px;">Lưu</button>
                </div>
                <div class="button-submit-edit-proflie">
                    <button class="button-submit-red" style="width:70px;">Huỷ</button>
                </div>
            }
        </form>
    </div>
    <div >
        abvc
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function enableEditing() {
        $.ajax({
            contentType: 'application/json',
            data: JSON.stringify({ ViewData["isDisable"]: false }),
            success: function () {
                // Sau khi server xử lý thành công, cập nhật giá trị isDisable và làm mới trang
                ViewData["isDisable"] = false;
            },
            error: function (error) {
                console.error('Error:', error);
            }
        });
    }
</script>
